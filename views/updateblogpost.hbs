 <form method="post" action="/updateblogpost/{{blogposts.id}}">
        <h2>Post blog posts</h2>
      {{#if dbError}}
  <p>the page can't display, try again later.</p>
  {{else}}

        <div class="contact-box">
            title: <input type="text" name="title" required="required" placeholder="Title" value="{{blogposts.title}}">
        </div>
        <div class="contact-box">
            Content: <textarea name="content" required="required" placeholder="Content">{{blogposts.content}}</textarea>
        </div>
        <div class="contact-box">
            <input type="submit" value="Post">
        </div>
    </form>
    {{/if}}